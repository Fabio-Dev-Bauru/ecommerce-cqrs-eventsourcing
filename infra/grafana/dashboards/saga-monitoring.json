{
  "dashboard": {
    "title": "Saga Orchestrator Monitoring",
    "tags": ["saga", "orchestrator"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Active Sagas",
        "type": "stat",
        "targets": [
          {
            "expr": "count(saga_instance_status{status!~\"COMPLETED|FAILED|COMPENSATION_COMPLETED\"})",
            "legendFormat": "Active"
          }
        ],
        "gridPos": {"h": 6, "w": 4, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Completed Sagas",
        "type": "stat",
        "targets": [
          {
            "expr": "count(saga_instance_status{status=\"COMPLETED\"})",
            "legendFormat": "Completed"
          }
        ],
        "gridPos": {"h": 6, "w": 4, "x": 4, "y": 0}
      },
      {
        "id": 3,
        "title": "Failed Sagas",
        "type": "stat",
        "targets": [
          {
            "expr": "count(saga_instance_status{status=\"FAILED\"})",
            "legendFormat": "Failed"
          }
        ],
        "gridPos": {"h": 6, "w": 4, "x": 8, "y": 0}
      },
      {
        "id": 4,
        "title": "Success Rate (%)",
        "type": "gauge",
        "targets": [
          {
            "expr": "100 * count(saga_instance_status{status=\"COMPLETED\"}) / count(saga_instance_status)",
            "legendFormat": "Success Rate"
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 5,
        "title": "Saga Duration (p95)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(saga_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "p95 duration"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6}
      },
      {
        "id": 6,
        "title": "Saga Steps Distribution",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(saga_step_completed[5m])) by (step)",
            "legendFormat": "{{step}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6}
      }
    ],
    "refresh": "10s",
    "schemaVersion": 27,
    "version": 1
  }
}

